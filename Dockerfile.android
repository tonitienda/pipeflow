# Dockerfile for building Android app locally without installing Java/Android SDK
FROM reactnativecommunity/react-native-android:v13.0

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy project files
COPY . .

# Expose metro bundler port
EXPOSE 8081

# Default command
CMD ["bash"]
